<UserControl x:Class="PrismWorkApp.Modules.BuildingModule.Dialogs.AddElementToCollectionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrismWorkApp.Modules.BuildingModule.Dialogs"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="850" >

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid Height="400" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Margin="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" 
               Content="{Binding Message}" />
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Grid.Row="1"  Margin="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" 
               Content="{Binding CommonCollectionName}" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Показать"  Width="75" Height="20"  HorizontalAlignment="Right" Margin="2" 
                        Command="{Binding SortingCommand}" />
                <ComboBox ItemsSource="{Binding PredicateCollection}" SelectedItem="{Binding SelectedPredicate}"
                          SelectedValue="{Binding PredicateCollection[0]}" DisplayMemberPath="Name"
                          SelectedValuePath="Name" Width="255">
                  
                </ComboBox>
            </StackPanel>



        </StackPanel>
        <Label Grid.Row="1"   Margin="2"  Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center" 
               Content="{Binding CurrentCollectionName}" />
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button  Content="Создать" Width="105" Height="20"  HorizontalAlignment="Right" Margin="10"
                Command="{Binding CreateNewElementCommand}"/>
            <Button  Content="Создать на основе" Width="105" Height="20"  HorizontalAlignment="Right" Margin="10" VerticalAlignment="Center"
                Command="{Binding CreateElementOnPatternInstanceCommand}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">
            <Button Grid.Row="1" Grid.Column="0" Content="&gt;&gt;Добавить&gt;&gt; "  Height="25"  HorizontalAlignment="Stretch" Margin="2"
                Command="{Binding AddToCollectionCommand}"/>
            <Button Grid.Row="1" Grid.Column="0" Content="&lt;&lt;Удалить&lt;&lt;"  Height="25"  HorizontalAlignment="Stretch" Margin="2"
                Command="{Binding RemoveFromCollectionCommand}"/>
        </StackPanel>
        <DataGrid Grid.Row="2" Grid.Column="0" Margin="2"  ItemsSource="{Binding SortedCommonCollection}" 
                  SelectedItem="{Binding SelectedElement,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                   AutoGenerateColumns="False"  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Наименование"  
                                                     Binding = "{Binding Path=ShortName}" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Row="2" Grid.Column="2" Margin="2" ItemsSource="{Binding CurrentCollection}"
                  SelectedItem="{Binding SelectedElement,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                   AutoGenerateColumns="False"  IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsVisible,Converter={StaticResource bool2VisibilityConverter}}"  Value="Collapsed">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
           
            
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Наименование"  
                                                     Binding = "{Binding Path=ShortName}" />
            </DataGrid.Columns>

        </DataGrid>
        <StackPanel Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Grid.Row="3" Grid.Column="0" Content="{Binding Refuse}" Width="75" Height="25"  HorizontalAlignment="Right" Margin="10"
                Command="{Binding ConfirmDialogCommand}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="{Binding Confirm}" Width="75" Height="25"  HorizontalAlignment="Right" Margin="10"
                Command="{Binding CloseDialogCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
