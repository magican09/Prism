    <Style x:Key="MenuItemContainerStyle_1" TargetType="MenuItem">
        <Setter Property="Header" Value="{Binding Name}"/>
        <Setter Property="ItemsSource" Value="{Binding }"/>
        <Setter Property="IsEnabled" Value="{Binding IsEnabled}"/>
        <Setter Property="Command" Value="{Binding}"/>
        <Setter Property="CommandParameter" 
                Value="{Binding Path=DataContext , RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type telerik:GridViewRow}}}"/>
    </Style>

    <Style x:Key="MenuItemContainerStyle" TargetType="MenuItem">
        <Setter Property="Header" Value="{Binding Name}"/>
        <Setter Property="ItemsSource" Value="{Binding }"/>
        <Setter Property="IsEnabled" Value="{Binding IsEnabled}"/>
        <Setter Property="Command" Value="{Binding}"/>
        <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type telerik:GridViewCell}}}"/>
        <Setter Property="CommandParameter" 
                Value="{Binding  PlacementTarget.Tag, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ContextMenu}}}"/>
    </Style>
