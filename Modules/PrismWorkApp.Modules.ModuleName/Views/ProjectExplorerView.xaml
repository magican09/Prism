<UserControl x:Class="PrismWorkApp.Modules.ModuleName.Views.ProjectExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrismWorkApp.Modules.ModuleName.Views"
               xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             >
    <Grid>
        <StackPanel >
        <TextBlock Text="{Binding Title}"/>
            <Button Content="Загрузить данные" Command="{Binding LoadAllProjectCommand}"/>
            <Button Content="Сформировать АОСР" Command="{Binding CreateAOSRCommand}"/>
            <TextBox Text="{Binding FormAOSR}"/>
            <TextBox Text="{Binding ToAOSR}"/>
            <DataGrid x:Name="DbGrid"  ItemsSource="{Binding Project.Works}"                  
                  Margin="10" 
                  Height="444"/>
        </StackPanel>
    </Grid>
</UserControl>
